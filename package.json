{
  "name": "expense-tracker",
  "version": "1.0.0",
  "description": "Expense Tracking Backend",
  "main": "index.js",
  "scripts": {
    "test": "jest .",
    "start": "ts-node --project tsconfig.json src/app.ts",
    "build": "tsc -p .",
    "lint": "tslint 'src/**/*.ts'",
    "lint-fix": "tslint 'src/**/*.ts' --fix",
    "db:up": "db-migrate up --config config/database.json -e dev",
    "db:create": "db-migrate create"
  },
  "author": "Tina Maria Thomas",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.3",
    "ts-node": "^6.0.2",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "db-migrate": "^0.11.1",
    "db-migrate-pg": "^0.4.0",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.4"
  }
}
